<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/firstPinNumberTV"
        style="@style/roboto_medium__32__black"
		android:layout_width="51dp"
		android:layout_height="70dp"
		android:background="@drawable/white_rounded__background"
		android:gravity="center"
		android:inputType="numberPassword"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/secondPinNumberTV"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="1" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/secondPinNumberTV"
        style="@style/roboto_medium__32__black"
		android:layout_width="51dp"
		android:layout_height="70dp"
		android:background="@drawable/white_rounded__background"
		android:gravity="center"
		android:inputType="numberPassword"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/thirdPinNumberTV"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/firstPinNumberTV"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="3" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/thirdPinNumberTV"
        style="@style/roboto_medium__32__black"
		android:layout_width="51dp"
		android:layout_height="70dp"
		android:background="@drawable/white_rounded__background"
		android:gravity="center"
		android:inputType="numberPassword"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/fourthPinNumberTV"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/secondPinNumberTV"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="2" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/fourthPinNumberTV"
        style="@style/roboto_medium__32__black"
		android:layout_width="51dp"
		android:layout_height="70dp"
		android:background="@drawable/white_rounded__background"
		android:gravity="center"
		android:inputType="numberPassword"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/thirdPinNumberTV"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="2" />

</androidx.constraintlayout.widget.ConstraintLayout>